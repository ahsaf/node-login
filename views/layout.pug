doctype html
html
  head
    title ATAAT Aticles
    link(rel='stylesheet' href='/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      a.navbar-brand(href='/') A T A A T
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/') Home
          if user
            li.nav-item
              a.nav-link(href='/articles/add') Add Article

        ul.nav.navbar-nav.navbar-right
         if user
          li.nav-iten
            h.nav-link(href='#') Hi, #{user.name}
          li.nav-iten
            a.nav-link(href='/users/logout') Logout
         else
          li.nav-item
            a.nav-link(href='/users/register') Register
          li.nav-item
            a.nav-link(href='/users/login') Login


    .container
      h1 nodejs training
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2018
script(src='/js/jquery-3.3.1.min.js')
script(src='/js/main.js')
